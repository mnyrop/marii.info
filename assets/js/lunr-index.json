---
layout: none
---
{%- assign count = 0 -%}
[
  {%- for item in site.posts -%}
  {
    "lunr_id": {{ count }},
    "title": {{ item.title | jsonify }},
    "url": {{ item.url | jsonify }},
    "content": {{ item.content | strip_html | jsonify }},
    "tags": "#{{ item.tags | join: ' #'}}"
  },
  {%- assign count = count | plus: 1 -%}
  {%- endfor -%}
  {%- for item in site.projects -%}
  {
    "lunr_id": {{ count }},
    "title": {{ item.title | jsonify }},
    "url": {{ item.url | jsonify }},
    "content": {{ item.content | strip_html | jsonify }},
    "tags": "#{{ item.tags | join: ' #'}}"
  }{%- unless forloop.last -%}, {%- endunless -%}
  {%- endfor -%}
]
